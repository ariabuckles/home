# This is Git's per-user configuration file.
[user]
    name = Aria Buckles
    email = aria@seesaw.me
[alias]
    p = pull --rebase
    cb = "!git checkout -b $@ && git branch --set-upstream-to master && true"
    st = status -u
    ls = status -u
    co = checkout
    br = branch --list '[^z]*' 'z[^-/]*'
    su = branch --set-upstream-to master
    lp = log -p
    ri = rebase -i
    rc = rebase --continue
    ci = commit -v
    alias = config --get-regexp ^alias
    rebase-package-lock = "!f() { git reset HEAD -- ${GIT_PREFIX}/package-lock.json && git checkout -- ${GIT_PREFIX}/package-lock.json && cd ${GIT_PREFIX} && npm install && git add -- package-lock.json; }; f"
    rpl = "!f() { git reset HEAD -- ${GIT_PREFIX}/package-lock.json && git checkout -- ${GIT_PREFIX}/package-lock.json && cd ${GIT_PREFIX} && npm install && git add -- package-lock.json; }; f"
    zbr = "!git branch --list \"$1*\" | xargs -t -I% git branch -m % $(echo % | sed 's/^/z-/') && true"
    clean-branches = "!git branch --list \"ss_web_qa_*\" | xargs -t -I% git branch -D %"
    annotate = blame
    ann = blame
    pr = "!git push -f origin HEAD:aria/$(/usr/bin/git rev-parse --abbrev-ref HEAD | sed -e 's/-[0-9a-z]$//')"
    fmt = "!cd -- ${GIT_PREFIX:-.} && npm run format && git add . && git commit -m 'Formatting: `npm run format`'"
    myprs = "!hub pr list -f '%au %pC %>(8) %i %Creset %t %l %Nc %n' | grep '^[^#]*ariabuckles[^#]*#' | sed 's/^[^#]*//'"
    assigned = "!hub pr list -f '%as %pC %>(8) %i %Creset %t %l %Nc %n' | grep '^[^#]*ariabuckles[^#]*#' | sed 's/^[^#]*//'"
[core]
    excludesfile = ~/.gitignoreglobal
    hooksPath = ~/.githooks
    abbrev = 8
[merge]
    tool = vimdiff
    conflictstyle = diff3
[mergetool]
    prompt = false
